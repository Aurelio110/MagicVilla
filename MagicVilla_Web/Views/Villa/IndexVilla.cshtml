@model IEnumerable<MagicVilla_Web.Models.Villa>

@{
    ViewData["Title"] = "Villenübersicht";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villenübersicht</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary" href="http://localhost:7001/VillaController/IndexVilla">
                <i class="bi bi-plus-square-fill"></i> Create New Villa
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Größe (qm)</th>
                <th>Belegung</th>
                <th>Preis</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Name</td>
                    <td>@villa.Sqm</td>
                    <td>@villa.Occupancy</td>
                    <td>@villa.Rate</td>
                    <td>
                        <a asp-controller="VillaController" asp-action="Details" asp-route-id="@villa.Id" class="btn btn-info">Anzeigen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
