@model IEnumerable<MagicVilla_Web.Models.Villa>

@{
    ViewData["Title"] = "Villenübersicht";
}

<div class="container p-4 border-dark">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa</a>
                
            
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Größe</th>
                <th>Belegung</th>
                <th>Preis</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Name</td>
                    <td>@villa.Sqm ㎡</td>
                    <td>max. @villa.Occupancy Personen</td>
                    <td>@villa.Rate Tsd. € </td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVillaVilla" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
